<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Event.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <div class="logo-icon">🎫</div>
                <span class="logo-text">Event Tickets</span>
            </a>
            <ul class="nav-menu">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Events", "Home")">Event</a></li>
                <li><a href="@Url.Action("MyTickets", "Home")">My Tickets</a></li>
                <li><a href="@Url.Action("EventList", "Organizer")">关于我们</a></li>
                <li><a href="@Url.Action("Profile", "Home")">Profile</a></li>
                <li><a href="@Url.Action("Login", "Account")" class="btn-primary">Sign In/ Sign Up</a></li>
            </ul>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year - TARUMT Event Ticketing System</p>
            <p>Thank You</p>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>