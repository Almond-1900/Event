@model IEnumerable<Event.Models.EventVM>

@{
    ViewBag.Title = "Event List";
}

<h2 class="mt-3 mb-4">Event List</h2>

<p>
    <a href="@Url.Action("Ocreate", "Organizer")" class="btn btn-primary">Create New Event</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No events found.
    </div>
}
else
{
    <table class="table table-striped table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Event ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Total Ticket</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Created</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventId</td>
                    <td>@item.EventTitle</td>
                    <td>@item.description</td>
                    <td>@item.TotalTicket</td>
                    <td>@item.StartT.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.EndT.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.CreatedT.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Oedit", "Organizer", new { id = item.EventId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Details", "Organizer", new { id = item.EventId })" class="btn btn-sm btn-info">Details</a>
                        <a href="@Url.Action("Delete", "Organizer", new { id = item.EventId })" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this event?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
