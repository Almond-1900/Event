@model OcreateVM
@{
    ViewBag.Title = "Organizer | Index";
}

<h2>Create Event</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="EventTitle" class="form-label"></label>
        <input asp-for="EventTitle" class="form-control" />
        <span asp-validation-for="EventTitle" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="description" class="form-label"></label>
        <textarea asp-for="description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TotalTicket" class="form-label"></label>
        <input asp-for="TotalTicket" class="form-control" type="number" min="1" />
        <span asp-validation-for="TotalTicket" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartT" class="form-label"></label>
        <input asp-for="StartT" class="form-control" type="datetime-local" />
        <span asp-validation-for="StartT" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="EndT" class="form-label"></label>
        <input asp-for="EndT" class="form-control" type="datetime-local" />
        <span asp-validation-for="EndT" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VenueId" class="form-label">Venue</label>
        <select asp-for="VenueId" asp-items="Model.VenueList" class="form-select">
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="OrganizerId" />
    <button type="submit" class="btn btn-primary">Create Event</button>
</form>